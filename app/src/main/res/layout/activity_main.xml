<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ListView
            android:id="@+id/listView_main_todolist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/btn_main_addTodo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/listView_main_todolist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:text="추가"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/btn_main_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/btn_main_addTodo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginHorizontal="12dp"

            android:text="로그"
            android:textSize="25sp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>