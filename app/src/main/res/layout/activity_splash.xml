<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:src="@drawable/bg1"
        android:scaleType="centerCrop"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:src="@drawable/bg_filter"
        android:scaleType="centerCrop"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_splash_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintGuide_begin="402dp"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_splash_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintGuide_begin="56dp"
        />


    <TextView
        android:id="@+id/txt_splash_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Every"
        android:textSize="30sp"
        android:textColor="@color/white"

        app:layout_constraintTop_toTopOf="@id/guide_splash_line1"
        app:layout_constraintBottom_toTopOf="@id/txt_splash_title2"
        app:layout_constraintStart_toStartOf="@id/guide_splash_line2"
        app:layout_constraintVertical_chainStyle="packed"
        />
    <TextView
        android:id="@+id/txt_splash_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Day"
        android:textSize="30sp"
        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@+id/txt_splash_title1"
        app:layout_constraintBottom_toTopOf="@id/txt_splash_title3"
        app:layout_constraintStart_toStartOf="@id/guide_splash_line2"
        />
    <TextView
        android:id="@+id/txt_splash_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Health"
        android:textSize="30sp"
        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@+id/txt_splash_title2"
        app:layout_constraintBottom_toTopOf="@id/txt_splash_title4"
        app:layout_constraintStart_toStartOf="@id/guide_splash_line2"
        />
    <TextView
        android:id="@+id/txt_splash_title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="All"
        android:textSize="30sp"
        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@+id/txt_splash_title3"
        app:layout_constraintBottom_toTopOf="@id/txt_splash_title5"
        app:layout_constraintStart_toStartOf="@id/guide_splash_line2"
        />
    <TextView
        android:id="@+id/txt_splash_title5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Night"
        android:textSize="30sp"
        android:textColor="@color/white"

        app:layout_constraintTop_toBottomOf="@+id/txt_splash_title4"
        app:layout_constraintStart_toStartOf="@id/guide_splash_line2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>