<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_signUp_inputId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="ID를 입력허세요."

                android:layout_marginHorizontal="28dp"
                android:layout_marginVertical="4dp" />

            <EditText
                android:id="@+id/edt_signUp_inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="이메일을 입력허세요."

                android:layout_marginHorizontal="28dp"
                android:layout_marginVertical="4dp" />

            <EditText
                android:id="@+id/edt_signUp_inputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="이름을 입력허세요."

                android:layout_marginHorizontal="28dp"
                android:layout_marginVertical="4dp" />

            <EditText
                android:id="@+id/edt_signUp_inputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="비밀번호를 입력허세요."

                android:layout_marginHorizontal="28dp"
                android:layout_marginVertical="4dp" />

            <EditText
                android:id="@+id/edt_signUp_inputPasswordRe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="비밀번호를 다시 입력허세요."

                android:layout_marginHorizontal="28dp"
                android:layout_marginVertical="4dp" />

            <Button
                android:id="@+id/btn_signUp_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="SignUp"
                android:textSize="24sp"

                android:textAllCaps="false"

                android:layout_marginHorizontal="28dp"
                android:layout_marginVertical="4dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>